<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 映射文件配置，指向接口 -->
<mapper namespace="com.springboot.multidatasource.mapper.slave.SlaveMapper">

    <select id="findById" parameterType="Integer" resultType="com.springboot.multidatasource.entity.Category">
        select * from t_category where category_id = #{value}
    </select>

